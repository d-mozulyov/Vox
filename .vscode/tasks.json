{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go build -o bin/vox ./cmd/vox",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "go run ./cmd/vox",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "test",
            "type": "shell",
            "command": "go test -v ./...",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "build-all-platforms",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/scripts/build-all.sh"
            ],
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}
